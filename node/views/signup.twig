{% extends "layout.twig" %}

{% block title %} Registrar usuario {% endblock %}

{% block main_container %}
  <h2>¡Regístrate como usuario!</h2>
  <form class="form-horizontal" method="post" action="/users/signup" >
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Email:</label>
      <div class="col-sm-10">
        <input id="email" type="email" class="form-control" name="email"
            placeholder="email@email.com" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="nombre">Nombre:</label>
      <div class="col-sm-10">
        <input id="nombre" type="text" class="form-control" name="nombre"
               placeholder="Joel" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="apellidos">Apellidos:</label>
      <div class="col-sm-10">
        <input id="apellidos" type="text" class="form-control" name="apellidos"
               placeholder="Miller" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="contraseña">Contraseña:</label>
      <div class="col-sm-10">          
        <input  id="contraseña" type="password"  class="form-control" name="contraseña"
        	placeholder="contraseña" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="repContra">Repetir Contraseña:</label>
      <div class="col-sm-10">
        <input  id="repContra" type="password"  class="form-control" name="repContra"
                placeholder="repite tu contraseña" required="true" />
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Registrar</button>
      </div>
    </div>
  </form>
{% endblock %}