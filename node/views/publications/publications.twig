{% extends "../layout.twig" %}
{% block title %} Mis publicaciones {% endblock %}

{% block main_container %}
    <h1>Publicaciones de {{author}}</h1>

    <div class="row">


        {% if publications.length != 0 %}

            {% for publi in publications %}


                <div class="col-xs-4 col-sm-4 col-md-3 col-lg-2 border" style="margin: 1rem">

                    <div class="border">
                        <div style="width:200px; margin: 1rem">
                            <h3>{{ publi.title }}</h3>
                            <h5 class=>{{ publi.content }}</h5>
                            <p>{{ publi.dateofcreation }}</p>
                            {% if publi.pictureURL %}
                                <div class="container-fluid">
                                    <img src="/images/{{ publi.pictureURL }}" class="img img-responsive full-width " />
                                </div>
                            {% endif %}
                        </div>
                    </div>


                </div>

            {% endfor %}




        {% else %}


            <h4>El usuario no tiene publicaciones</h4>


        {% endif %}





    </div>


    <!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">

            {% for page in pages %}

                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/publications/list?page={{ page }}">{{ page }}</a>
                </li>

            {% endfor %}

            <script>

                $("#pi-"+"{{ currentPage }}").addClass("active");

            </script>


        </ul>
    </div>

{% endblock %}