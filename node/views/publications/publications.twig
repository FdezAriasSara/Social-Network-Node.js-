{% extends "../layout.twig" %}
{% block title %} Mis publicaciones {% endblock %}

{% block main_container %}
    <h1>Mis publicaciones</h1>

    <div class="row">


            {% for publi in publications %}

                <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3" >


                        <div style="width:200px; padding:1rem; border-style: solid; border-color: black; border-radius: 1rem">
                            <h3>{{ publi.title }}</h3>
                            <h5 class=>{{ publi.content }}</h5>
                            <p>{{ publi.dateofcreation }}</p>
                            <img src="/images/{{ publi.pictureURL }}" class="img img-responsive full-width rounded-1" />
                        </div>


                </div>

            {% endfor %}





    </div>


    <!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">

            {% for page in pages %}

                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/publications/list?page={{ page }}">{{ page }}</a>
                </li>

            {% endfor %}

            <script>

                $("#pi-"+"{{ currentPage }}").addClass("active");

            </script>


        </ul>
    </div>

{% endblock %}