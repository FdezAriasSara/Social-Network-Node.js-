{% extends "../layout.twig" %}
{% block title %} Agregar canción {% endblock %}
{% block main_container %}
    <h2>Añade una publicación</h2>
    <form class="form-horizontal" method="post" action="/publications/add" enctype="multipart/form-data">

        <div class="form-group">
            <label class="control-label col-sm-2" for="title">Título:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" name="title" placeholder="Nombre de la publicacion" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="description" >Descripción</label>
            <div class="col-sm-10">
                <input class="form-control" id="description" name="description" placeholder="Descripción"
                       type="text"/>
                <span class="text-danger"  ></span>
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-sm-2" for="imgPubli">Imagen:</label>
            <div class="col-sm-10">
                <input type="file" id="imgPubli" class="custom-file-input" name="imgPubli" accept=".png" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </form>
{% endblock %}